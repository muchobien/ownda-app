{
  "extends": "@muchobien/eslint-config-react-native/tsconfig.base",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./src"],
      "@app/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "commitlint.config.js"
  ]
}
